<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>This process adds a Requested Delivery Date to a field, so when a lead is converted it will not be stopped.</description>
    <formulas>
        <description>Adds 2 months to the Created Date Field</description>
        <name>CreatedDatePlus2Month</name>
        <dataType>Date</dataType>
        <expression>DATE(
YEAR(TODAY()),
MONTH(TODAY())  + 2,
DAY(TODAY())
)</expression>
    </formulas>
    <interviewLabel>LEAD - Add Requested Delivery Date Upon Conversion {!$Flow.CurrentDateTime}</interviewLabel>
    <label>LEAD - Add Requested Delivery Date Upon Conversion</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Update the requested delivery date, so that upon conversion that field is created the conversion doesn&apos;t fail.</description>
        <name>Update_Opp_Requested_Delivery_Date</name>
        <label>Update Opp Requested Delivery Date</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
        <inputAssignments>
            <field>Opp_Requested_Delivery_Date__c</field>
            <value>
                <elementReference>CreatedDatePlus2Month</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Opp_Requested_Delivery_Date</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Status</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Qualified - Convert</stringValue>
            </value>
        </filters>
        <filters>
            <field>Opp_Requested_Delivery_Date__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Lead</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
